{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "shared": ["./dist/esm"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
