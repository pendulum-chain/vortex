{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "paths": {
      "@packages/*": ["../../packages/*/src"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
