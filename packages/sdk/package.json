{
  "dependencies": {
    "@vortexfi/shared": "^0.0.7"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "name": "@vortexfi/sdk",
  "peerDependencies": {
    "@polkadot/api": "^16.4.6",
    "stellar-sdk": "^13.1.0",
    "viem": "^2.37.9"
  },
  "repository": {
    "directory": "packages/sdk",
    "type": "git",
    "url": "https://github.com/pendulum-chain/vortex.git"
  },
  "scripts": {
    "analyze": "bun build ./src/index.ts --outdir ./dist/analysis --target=browser --format=esm --minify --splitting --metafile=./dist/analysis/meta.json",
    "analyze:size": "bun run analyze && ls -lah ./dist/analysis/",
    "build": "bun run clean && bun run build:cjs && bun run build:esm && bun run build:types && bun run postbuild",
    "build:cjs": "bun build ./src/index.ts --outdir ./dist/cjs --target=node --format=cjs --external=@polkadot/api --external=stellar-sdk --external=viem --define 'import.meta.env=process.env'",
    "build:esm": "bun build ./src/index.ts --outdir ./dist/esm --target=node --format=esm --external=@polkadot/api --external=stellar-sdk --external=viem",
    "build:types": "bun x tsc -p tsconfig.json",
    "clean": "rm -rf ./dist",
    "dev": "bun run --watch ./src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "postbuild": "node scripts/post-build.js",
    "prepublishOnly": "bun run build",
    "test": "bun run build && echo 'Build successful! CJS and ESM outputs created.'",
    "typecheck": "bun x --bun tsc"
  },
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "version": "0.4.3"
}
