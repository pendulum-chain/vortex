{
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "name": "@vortexfi/sdk",
  "peerDependencies": {
    "@polkadot/api": "^16.4.1",
    "stellar-sdk": "^13.3.0",
    "viem": "^2.31.7"
  },
  "repository": {
    "directory": "packages/sdk",
    "type": "git",
    "url": "https://github.com/pendulum-chain/vortex.git"
  },
  "scripts": {
    "analyze": "bun build ./src/index.ts --outdir ./dist/analysis --target=browser --format=esm --minify --splitting --metafile=./dist/analysis/meta.json",
    "analyze:size": "bun run analyze && ls -lah ./dist/analysis/",
    "build": "rm -rf ./dist && tsc -p tsconfig.json && bun build ./src/index.ts --outdir ./dist --target=node --external=\"@polkadot/api\" --external=\"stellar-sdk\" --external=\"viem\"",
    "clean": "rm -rf ./dist",
    "dev": "bun run --watch ./src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "typecheck": "bun x --bun tsc"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.3.0"
}
