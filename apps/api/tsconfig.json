{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "paths": {
      "@packages/*": ["../../packages/*/src"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": ["bun-types"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src", "node_modules/@pendulum-chain/types"]
}
