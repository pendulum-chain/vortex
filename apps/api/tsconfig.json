{
  "compilerOptions": {
    "paths": {
      "@packages/*": ["../../packages/*/src"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["bun-types"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
