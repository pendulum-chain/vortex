{
  "compilerOptions": {
    "paths": {
      "shared": ["../shared/dist/cjs"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
