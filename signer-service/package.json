    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.9",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.2.0",
